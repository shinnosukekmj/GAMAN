  <%=form_with model: price,url: prices_path,method: :post,local: false do |f|%>
    <%=f.text_field:money,placeholder: "金額"%>
    <%=f.label:"×"%>
    <%=f.text_field:count,placeholder: "数量"%>
    <%=f.label:"→"%>
    <%=f.submit '計算',:class => "btn btn-success btn-block"%>
  <%end%>

  <div class="mt-3">
    <% if price.errors.any? %>
      <%= price.errors.count %>件のエラーが発生しました
      <ul>
        <% price.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <h4 class="text-center mt-4">計算結果</h4>
  <table class="table">
    <%total_price = 0%>
    <%prices.each do |price|%>
    <tr>
      <td>
        <%price.money%>
      </td>
      <td>
        <%price.count%>
      </td>
      <td class="text-center h2">
        <%total_price = price.money.to_i * price.count.to_i%>
        <%=total_price%>円貯金できました！
      </td>
    </tr>
    <%end%>
  </table>