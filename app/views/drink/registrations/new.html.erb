<div class="row d-flex justify-content-center mt-5">
  <div class="col-4 card pt-3">
    <h2 class="text-center">禁酒開始</h2>

    <%= form_with model: @drink, url: drink_registration_path do |f| %>
      <%= render "drink/shared/error_messages", resource: resource %>

      <div class="form-group　mt-1">
        <%= f.label :name,"あなたの好きなお酒の名前",:class => "form-label" %><br>
        <%= f.text_field :name,autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group mt-1">
        <%= f.label :email, "メールアドレス", :class => "form-label" %><br />
        <%= f.email_field :email, autocomplete: "email", :class => "form-control"  %>
      </div>

      <div class="form-group mt-1">
        <%= f.label :password,"パスワード(6文字以上)", :class => "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="form-group mt-1">
        <%= f.label :password_confirmation,"パスワード再入力", :class => "form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="actions mt-2 text-center">
        <%= f.submit "新規登録", :class => "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "drink/shared/links" %>
  </div>
</div>
